<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:columnCount="3">

    <ImageView
        android:id="@+id/bake_image_iv"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/today_icon"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        />

    <TextView
        android:id="@+id/bake_name_tv"
        android:layout_width="0dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:text="19" />

    <TextView
        android:id="@+id/bake_ingredients_count_tv"
        android:layout_width="0dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        app:layout_columnWeight="1"
        tools:text="Rainy" />

    <TextView
        android:id="@+id/bake_step_count_tv"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        app:layout_columnWeight="1"
        tools:text="10" />

</android.support.v7.widget.GridLayout>


